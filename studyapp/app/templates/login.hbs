<div class="login-container">
	<div class="signup-titles">
		<span class="bold large">Login</span>
	</div>
	<br><br>
	<div class="signup-titles bold">
		Email
	</div>
	<div class="text-center">
		{{input type="text" value=email class="inputbox" maxlength="85"}}
	</div>
	<br><br>
	<div class="signup-titles bold">
		Password
	</div>
	<div class="text-center">
		{{input type="text" value=password type="password" class="inputbox" maxlength="85"}}
	</div>
	<br><br><br>
	<div class="signup-buttons">
		<a class="button black" {{action 'login'}}>Log In</a>
	</div>
</div>